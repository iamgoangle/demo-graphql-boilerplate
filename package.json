{
  "name": "apollo-server",
  "version": "1.0.0",
  "description": "apollo-server",
  "main": "app.js",
  "author": "Teerapong Singthong",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "nodemon ./src/app.js --exec babel-node -e js,gql --delay 0.5",
    "build": "babel src -s -D -d dist",
    "dev:debug": "DEBUG=myapp:* npm run dev",
    "serve": "node ./dist/app.js",
    "test": "jest --config jest.config.js ./src --notify",
    "test:staged-files": "jest --bail --findRelatedTests ./src",
    "test:watch": "yarn test --watch",
    "test:ls": "jest --listTests",
    "cover": "jest --coverage",
    "lint": "eslint .",
    "nsp": "nsp check",
    "audit": "npm audit",
    "jsdoc": "npx jsdoc -R README.md -r ./src/components -d ./jsdoc --debug && open ./jsdoc/index.html",
    "ci": "yarn lint && yarn test"
  },
  "dependencies": {
    "@chrisalderson/express-winston": "^3.1.0",
    "apollo-server": "^2.0.5",
    "apollo-server-express": "^2.0.4",
    "axios": "^0.18.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "body-parser": "^1.18.3",
    "boom": "^7.2.0",
    "compression": "^1.7.3",
    "dotenv": "^6.0.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "express-winston": "^2.0.0",
    "faker": "^4.1.0",
    "graphql-tools": "^3.1.1",
    "helmet": "^3.13.0",
    "joi": "^13.6.0",
    "merge-graphql-schemas": "^1.5.3",
    "morgan": "^1.9.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "winston": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.5.0",
    "jsdoc": "^3.5.5",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.0"
  }
}
